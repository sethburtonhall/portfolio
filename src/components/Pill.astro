---
interface Props {
  url?: string;
}

const { url } = Astro.props;
---

<div
  class="flex gap-2 whitespace-nowrap rounded-full bg-[--accent-regular] p-4 text-md leading-5 text-stone-100"
>
  {
    url ? (
      <a href={url} class="no-link flex gap-2">
        <slot />
      </a>
    ) : (
      <slot />
    )
  }
</div>

<style>
  .no-link {
    @apply text-stone-100 no-underline hover:text-stone-100;
  }
</style>
