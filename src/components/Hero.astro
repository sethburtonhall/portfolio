---
import { Picture } from "astro:assets";
import avatar from "@/images/mtn_avatar.png";

import Pill from "@/components/Pill.astro";

interface Props {
  title: string;
  tagline?: string;
  align?: "start" | "center";
}

const { align = "center", tagline, title } = Astro.props;
---

<section
  class:list={[
    "stack container w-full gap-4 text-xl lg:text-2xl",
    align === "start" && "text-left",
    align === "center" && "text-center",
  ]}
>
  <div
    class="grid items-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-12 xl:grid-cols-[1fr_550px]"
  >
    <div class="stack gap-2">
      <h1 class="text-3xl tracking-tighter lg:text-5xl">
        {title}
      </h1>
      {
        tagline && (
          <p class="text-lg text-[--stone-500] lg:text-xl">{tagline}</p>
        )
      }
      <div
        class:list={[
          "hidden gap-2 lg:flex",
          align === "center" && "justify-center",
        ]}
      >
        <Pill>Developer</Pill>
        <Pill>Speaker</Pill>
        <Pill>Writer</Pill>
      </div>
    </div>
    <Picture
      src={avatar}
      alt="Hero"
      loading="eager"
      class="mx-auto aspect-square overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-last"
    />
  </div>
</section>
